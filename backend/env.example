# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# AAMAD Adapter
AAMAD_ADAPTER=crewai

# Database
DATABASE_URL=sqlite:///./onboarding.db

# Cloud Storage
STORAGE_TYPE=local
UPLOAD_DIR=./uploads

# LLM Provider (OpenAI) - REQUIRED
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CrewAI Configuration
CREWAI_VERBOSE=false
CREWAI_MAX_ITER=12
CREWAI_MAX_EXECUTION_TIME=300
MAX_RPM=60

# Logging
LOG_LEVEL=INFO
